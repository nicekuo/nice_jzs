<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">


    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dipX15"
        android:gravity="center"
        android:text="v1.0"
        android:textColor="@color/text_999999"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="125dp"
        android:layout_height="37dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_login_logo" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dipX15"
        android:layout_marginTop="@dimen/dipX15"
        android:gravity="center"
        android:text="坚持 · 坚强 · 坚定"
        android:textColor="@color/text_999999"
        android:textSize="16sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/id_btn_register"
            android:layout_width="0dp"
            android:layout_height="@dimen/dipX45"
            android:layout_weight="2"
            android:background="@drawable/round_corner_blue_bg"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/white" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/id_btn_login"
            android:layout_width="0dp"
            android:layout_height="@dimen/dipX45"
            android:layout_weight="2"
            android:background="@drawable/round_stroke_blue_bg"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/blue" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/weichat_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dipX15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_login_wecaht"
            android:layout_marginRight="@dimen/dipX5"
            />

        <TextView
            android:id="@+id/weichat_login_tips"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/dipX5"
            android:gravity="center"
            android:text="用微信登录"
            android:textColor="@color/text_999999"
            android:textSize="@dimen/txt_size_item_middle" />

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>