<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <nice.com.jzs.ui.ViewProgress
        android:id="@+id/view_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dipX50"
        android:layout_marginBottom="@dimen/dipX50"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dipX45"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_ev_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/dipX45"
            android:layout_marginRight="@dimen/dipX15"
            android:layout_weight="1"
            android:background="@drawable/round_corner_grey_bg"
            android:hint="@string/hint_input_code"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dipX15"
            android:paddingLeft="@dimen/dipX15"
            android:textSize="@dimen/txt_size_item_content" />

        <TextView
            android:id="@+id/id_btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:background="@drawable/round_corner_blue_bg"
            android:padding="@dimen/dipX15"
            android:text="@string/hint_get_verify_code"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_item_content" />
    </LinearLayout>



    <TextView
        android:id="@+id/id_btn_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        android:layout_height="@dimen/dipX45"
        android:layout_gravity="center"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:background="@drawable/round_corner_blue_bg"
        android:text="下一步"
        android:textColor="@color/white" />


</LinearLayout>