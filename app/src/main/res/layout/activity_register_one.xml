<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <nice.com.jzs.ui.ViewProgress
        android:id="@+id/view_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dipX50"
        android:layout_marginBottom="@dimen/dipX50"
        />

    <EditText
        android:id="@+id/id_ev_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dipX45"
        android:background="@drawable/round_corner_grey_bg"
        android:hint="@string/hint_input_phone_number"
        android:maxLines="1"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        android:paddingLeft="@dimen/dipX15"
        android:textSize="@dimen/txt_size_item_content" />


    <TextView
        android:id="@+id/id_btn_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        android:layout_height="@dimen/dipX45"
        android:layout_gravity="center"
        android:layout_marginTop="30dip"
        android:gravity="center"
        android:background="@drawable/round_corner_blue_bg"
        android:text="注册"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dipX15"
        android:layout_marginTop="30dip"
        android:paddingRight="@dimen/dipX15"
        android:layout_height="@dimen/common_button_height">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dipX15"
            android:text="我已阅读并接受《协议事宜》"
            />
    </LinearLayout>

</LinearLayout>