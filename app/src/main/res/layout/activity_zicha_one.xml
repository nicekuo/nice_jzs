<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"
        android:layout_width="300dp"
        android:layout_height="315dp"
        android:src="@drawable/img_zicha_2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dipX10"
        />

    <TextView
        android:id="@+id/tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_two"
        android:textSize="16sp"
        android:textColor="@color/text_999999"
        android:padding="@dimen/dipX15"
        android:text="@string/zicha_one"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        android:layout_marginTop="@dimen/dipX10"
        />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="16sp"
        android:textColor="@color/text_999999"
        android:padding="@dimen/dipX15"
        android:text="@string/zicha_tips"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        />


    <TextView
        android:id="@+id/ok"
        android:layout_width="200dp"
        android:layout_height="@dimen/common_button_height"
        android:background="@drawable/round_corner_blue_bg"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="16sp"
        android:text="@string/zicha_one_ok_tips"
        android:layout_marginTop="@dimen/dipX15"
        />


</LinearLayout>