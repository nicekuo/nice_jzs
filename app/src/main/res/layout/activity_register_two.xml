<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="@color/app_bg_color">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dipX45"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/id_ev_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/dipX45"
            android:layout_marginRight="@dimen/dipX5"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="@string/hint_input_code"
            android:maxLines="1"
            android:padding="@dimen/dipX5"
            android:textSize="@dimen/txt_size_item_content" />

        <TextView
            android:id="@+id/id_btn_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dip"
            android:background="@color/blue"
            android:paddingBottom="@dimen/dipX5"
            android:paddingLeft="@dimen/dipX10"
            android:paddingRight="@dimen/dipX10"
            android:paddingTop="@dimen/dipX5"
            android:text="@string/hint_get_verify_code"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_item_content" />
    </LinearLayout>



    <TextView
        android:id="@+id/id_btn_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        android:layout_height="@dimen/dipX45"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:background="@color/blue"
        android:text="下一步"
        android:textColor="@color/white" />


</LinearLayout>