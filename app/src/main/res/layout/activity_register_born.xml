<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="@color/app_bg_color">

    </View>

    <EditText
        android:id="@+id/edit_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dipX45"
        android:background="@color/white"
        android:hint="点击选择出生日期"
        android:maxLines="1"
        android:padding="@dimen/dipX5"
        android:textSize="@dimen/txt_size_item_content" />


    <View
        android:layout_width="match_parent"
        android:layout_height="4dip"
        android:background="@color/app_bg_color">

    </View>


    <TextView
        android:id="@+id/id_btn_login"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dipX15"
        android:layout_marginRight="@dimen/dipX15"
        android:layout_height="@dimen/dipX45"
        android:layout_gravity="center"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:background="@color/blue"
        android:text="下一步"
        android:textColor="@color/white" />



    <DatePicker
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dipX15"
        >
    </DatePicker>



</LinearLayout>